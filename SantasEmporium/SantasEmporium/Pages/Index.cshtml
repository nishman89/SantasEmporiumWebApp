@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="jumbotron jumbotron-fluid bg-danger text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">Merry Christmas!</h1>
        <p class="lead">Welcome to Santa's Christmas Emporium!</p>
    </div>
</div>

<div class="text-center ">
            <h2>About Us</h2>
            <p class=""> Since 2022, Santa and his elves have created a website which makes it easy to navigate who's naughty and nice, as well as allowing us to assign each person a present, all in one place and all seamlessly </p>
</div>

<div class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5">Join Our Christmas Newsletter</h2>
        <p class="text-center mb-5">Get updates on new Christmas content, special offers, and holiday cheer straight to your inbox.</p>
        <form>
            <div class="form-group mx-auto" style="max-width: 400px;">
                <input type="email" class="form-control" placeholder="Enter your email address">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-danger text-white">Sign Up</button>
            </div>
        </form>
    </div>
</div>
